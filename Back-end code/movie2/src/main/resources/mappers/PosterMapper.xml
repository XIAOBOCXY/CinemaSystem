	<update id="updateByPrimaryKeySelective" parameterType="Poster">
		 UPDATE t_poster
 		 <set> 
			<if test="fid != null">
				 fid = #{fid},
			</if>
			<if test="title != null">
				 title = #{title},
			</if>
			<if test="url != null">
				 url = #{url},
			</if>
			<if test="status != null">
				 status = #{status},
			</if>
			<if test="createTime != null">
				 create_time = #{createTime},
			</if>
			<if test="updateTime != null">
				 update_time = #{updateTime},
			</if>

 		 </set>
		 WHERE id = #{id}
	</update>

	<!-- 修 改-->
